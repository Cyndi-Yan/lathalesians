% \intercal, the symbol we use in place of "T" for the transpose
\RequirePackage{amssymb}

% Transpose
\newcommand{\transpose}[1]{\ensuremath{#1^{\intercal}}}

% Trace
\DeclareMathOperator{\tr}{tr}

% Rank
\DeclareMathOperator{\rank}{rank}

% Nullity
\DeclareMathOperator{\nul}{nul}

% Diagonal
\newcommand{\diag}[1]{\ensuremath{#1^\text{(diag)}}}

% Name of a vector
\DeclareDocumentCommand \V { m }{%
    \boldsymbol{#1}%
}

% Name of a matrix
\DeclareDocumentCommand \M { m }{%
    \boldsymbol{#1}%
}

% vec of tensor calculus
\DeclareMathOperator{\vect}{vec}
